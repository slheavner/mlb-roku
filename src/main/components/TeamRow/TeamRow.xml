<?xml version="1.0" encoding="utf-8" ?>

<component
    name="TeamRow"
    extends="LayoutGroup">
  <interface>
    <field
        id="itemContent"
        type="Node" />
    <field
        id="width"
        type="int"
        value="720" />
    <field
        id="height"
        type="int" />
    <field
        id="fontSize"
        type="int" />
  </interface>
  <script
      type="text/brightscript"
      uri="pkg:/components/TeamRow/TeamRow.brs" />
  <children>
    <Label
        id="name"
        color="@{colors.black}FF" />
    <Label
        id="wins"
        color="@{colors.black}FF" />
    <Label
        id="losses"
        color="@{colors.black}FF" />
    <Label
        id="percentage"
        color="@{colors.black}FF" />
    <Label
        id="gb"
        color="@{colors.black}FF"
        horizAlign="right" />
  </children>
</component>